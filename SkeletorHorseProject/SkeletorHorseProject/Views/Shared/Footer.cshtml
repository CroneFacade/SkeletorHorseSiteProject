@model  List<SkeletorDAL.Model.FooterModel>
@{
    ViewBag.Title = "Footer";
}


@if (User.Identity.IsAuthenticated && int.Parse(User.Identity.Name) < 2)
{
    <div class="editFooterLinks">
        @Html.ActionLink("Edit Links", "EditLinks", "Footer")
    </div>
    
}

@*Column 1*@
    <div class="FooterContainer">
    <div class="FooterColumn">

        @foreach (var link in Model)
