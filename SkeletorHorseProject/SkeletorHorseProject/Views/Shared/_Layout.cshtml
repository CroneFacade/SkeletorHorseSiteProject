    <div class="wrapper">
        <div class="navigation">
            <div class="navbar-collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Skeletor Horse Site", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})</li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="True">Horses <span class="caret"></span></a>

                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("All Horses", "Index", "FilteredHorsePage", new {navigationId = 1}, null)</li>
                            <li>@Html.ActionLink("Horses For Sale", "Index", "FilteredHorsePage", new {navigationId = 2}, null)</li>
                            <li>@Html.ActionLink("Sold Horses", "Index", "FilteredHorsePage", new {navigationId = 3}, null)</li>

                        </ul>
                    </li>
                    <li>@Html.ActionLink("For Sale", "Index", "HorseSale", new {area = ""}, new {@class = "navbar-brand"})</li>
                    <li>@Html.ActionLink("Gallery", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Contact", "Index", "Contact", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li>@Html.ActionLink("About", "Index", "About", new { area = "" }, new { @class = "navbar-brand" })</li>
                </ul>
            </div>

        </div>
        <div class="carousel">
            Här är en Karusell!
        </div>

        <div class="content">
            @RenderBody()
        </div>
        <div class="footer">
            @Html.Action("Index", "Footer")
        </div>

    </div>








