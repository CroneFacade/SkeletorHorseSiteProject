@model System.Collections.Generic.List<SkeletorDAL.Model.HorseModel>

@{
    ViewBag.Title = "title";
}

<h4></h4>
<div id="horses">

   @if (Model.Count == 0)
   {
       <p>No horses avalible</p>
   }
   else
   {
    foreach (var horse in Model)
    {

        <img src="~/Images/e.jpg">
        <p>Name: @horse.Name</p>
        <p>Birthday: @horse.Birthday.ToShortDateString()</p>
        <p>@Html.ActionLink(("Go to " + @horse.Name + "'s profile page"), "Index", "HorseProfile", new { id = @horse.ID }, null)</p>
    }
   }

    </div>
