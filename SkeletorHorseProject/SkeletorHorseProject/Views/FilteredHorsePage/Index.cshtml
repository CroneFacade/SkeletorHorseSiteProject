@model System.Collections.Generic.List<SkeletorDAL.Model.HorseModel>

@{
    ViewBag.Title = "title";
}
<body>
    <div id="filtering_horses">

        @if (Model.Count == 0)
        {
            <p>No horses avalible</p>
        }
        else
        {
            foreach (var horse in Model)
            {
                <div id="horse">
                    <img src="@Url.Content(horse.ImagePath)" style=" height: 250px; width: 200px;" alt="Image" />
                    <p>
                        Name: @horse.Name
                    </p>
                    <p>
                        Birthday: @horse.Birthday.ToShortDateString()
                    </p>
                    <p>
                        @Html.ActionLink(("Go to " + @horse.Name + "'s profile page"), "Index", "HorseProfile", new { id = @horse.ID }, null)
                    </p>
                </div>

            }
        }
    </div>
</body>