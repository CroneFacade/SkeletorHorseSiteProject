@model IEnumerable<SkeletorDAL.Model.FooterModel>

@{
    ViewBag.Title = "EditLinks";
}

<h2>Edit Footer Links</h2>
<hr />
<legend>Add new link</legend>
@Html.Action("AddNewLink")

<br />

<legend>Edit current links</legend>
    
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Column)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Url)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Column)
                </td>
                <td>
                    @Html.ActionLink("Delete", "DeleteFooterLink", new { id = item.ID })
                </td>
            </tr>
}

    </table>
